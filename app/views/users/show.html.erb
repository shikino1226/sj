<h3>スケジュール詳細</h3>
 
<table class="tableAll">
  <tr>
    <th>タイトル</th>
    <td><%= @user.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @user.startDay %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @user.created_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @user.allDay  ? '○' : '' %></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @user.memo %></td>
  </tr>
  
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール情報一覧に戻る", :users %></li>
  </ul>
  <ul>
    <li><%= link_to "スケジュールを編集する", edit_user_path(@user.id) %></li>
  </ul>
  <ul>
    <li><%= link_to "スケジュールを削除", user_path(@user.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
    </li>
  </ul>
</div>




