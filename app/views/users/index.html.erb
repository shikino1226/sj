<h3>スケジュール一覧</h3>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>


<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日時</th>
      <th>参照</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.title %></td>
        <td><%= user.startDay %></td>
        <td><%= user.finishDay %></td>
        <td><%= user.allDay ? '○' : '' %></td>
        <td><%= user.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to "参照", user %></td>
        <td><%= link_to "編集", [:edit, user] %></td>
        <td><%= link_to "削除", user, method: :delete, data: {confirm: "削除しますか？"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "スケジュール新規登録", :new_user %></p>